<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offwhite"
    tools:context=".BusinessLogin">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_rest"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="31dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bus">

        <TextView
            android:id="@+id/tv_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="150dp"
            android:fontFamily="@font/comfortaa_variablefont_wght"
            android:text="Login as Alimento-Restaurant"
            android:textColor="#040404" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/restaurantlogin" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_cat"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="@+id/card_rest"
        app:layout_constraintStart_toStartOf="@+id/card_rest"
        app:layout_constraintTop_toBottomOf="@+id/card_rest">

        <TextView
            android:id="@+id/tv_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="150dp"
            android:fontFamily="@font/comfortaa_variablefont_wght"
            android:text="Login as Aimento-Caterer"
            android:textColor="#050505" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/catererlogin" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_che"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="@+id/card_cat"
        app:layout_constraintStart_toStartOf="@+id/card_cat"
        app:layout_constraintTop_toBottomOf="@+id/card_cat">

        <TextView
            android:id="@+id/tv_che"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="150dp"
            android:fontFamily="@font/comfortaa_variablefont_wght"
            android:text="Login as Alimento-Chef"
            android:textColor="#050505" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cheflogin" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_bus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/comfortaa_variablefont_wght"
        android:text="Login /Register as Alimento-Business Partners"
        android:textColor="#040404"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/card_rest"
        app:layout_constraintStart_toStartOf="@+id/card_rest"
        app:layout_constraintTop_toBottomOf="@+id/tv_business" />

    <TextView
        android:id="@+id/tv_business"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/comfortaa_variablefont_wght"
        android:text="Alimento-Business"
        android:textColor="#0B0B0B"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_bus"
        app:layout_constraintStart_toStartOf="@+id/tv_bus"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_staff"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="@+id/card_che"
        app:layout_constraintStart_toStartOf="@+id/card_che"
        app:layout_constraintTop_toBottomOf="@+id/card_che">

        <TextView
            android:id="@+id/tv_sta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="150dp"
            android:fontFamily="@font/comfortaa_variablefont_wght"
            android:text="Login as Alimento-Staff"
            android:textColor="#050505" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/staff" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>