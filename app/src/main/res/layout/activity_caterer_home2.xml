<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/offwhite"
    tools:context=".CatererHome">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_catinfo"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/cardback"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:srcCompat="@drawable/cat_prof" />

        <TextView
            android:id="@+id/tv_cat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/comfortaa_variablefont_wght"
            android:text=" PROFILE"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_cat2"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/comfortaa_variablefont_wght"
            android:text="View and manage your profile"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_catbook"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/border"
        android:backgroundTint="@color/cardback"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/card_catinfo"
        app:layout_constraintStart_toStartOf="@+id/card_catinfo"
        app:layout_constraintTop_toBottomOf="@+id/card_catinfo">


        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:srcCompat="@drawable/cat_booking" />

        <TextView
            android:id="@+id/tv_cat3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/comfortaa_variablefont_wght"
            android:text=" BOOKINGS"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_cat4"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/comfortaa_variablefont_wght"
            android:text="View you booked event details"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="42dp"
        android:fontFamily="@font/comfortaa_variablefont_wght"
        android:text="Alimento-Caterer"
        android:textColor="#050505"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_addcatprofile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_btn"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/card_catbook"
        app:layout_constraintStart_toStartOf="@+id/card_catbook"
        app:layout_constraintTop_toBottomOf="@+id/card_catbook" />


</androidx.constraintlayout.widget.ConstraintLayout>